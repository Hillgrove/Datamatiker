@page
@model WebShopRP.Pages.Customers.ViewModel
@{
}

<h1 class="display-3 mb-5">View Customer</h1>

<form method="get">
	<div class="form-group mb-3" hidden>
		<label asp-for="@Model.Data.Id" class="control-label"></label>
		<input asp-for="@Model.Data.Id" class="form-control" readonly="@(true)" />
	</div>
	<div class="form-group mb-3">
		<label asp-for="@Model.Data.Name" class="control-label"></label>
		<input asp-for="@Model.Data.Name" class="form-control" readonly="@(true)" />
	</div>
	<div class="form-group mb-3">
		<label asp-for="@Model.Data.Address" class="control-label"></label>
		<input asp-for="@Model.Data.Address" class="form-control" readonly="@(true)" />
	</div>
	<div class="form-group mb-3">
		<label asp-for="@Model.Data.Email" class="control-label"></label>
		<input asp-for="@Model.Data.Email" class="form-control" readonly="@(true)" />
	</div>
	<div class="mb-3">
		<p>Have submitted @Model.Data.Orders.Count() orders</p>
	</div>

	<p>
		<a class="btn btn-outline-primary mt-3" asp-page="All">Back to list</a>
	</p>
</form>